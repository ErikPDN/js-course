<%- include('includes/head') %>    
<%- include('includes/nav') %>    

<% if (user) { %>
  <div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
      
      <div class="col-lg-8, my-3">
        <h1 class="text-center">Agenda</h1> 
        <p class="text-center lead">Contacts below</p>

        <%- include('includes/messages') %>
      </div>
      
      <% if (contacts.length > 0) {  %>
      <div class="reponsive-table">
        <table class="table table-striped table-hover">
          <% contacts.forEach(contact => {  %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.lastName %></td>
              <td><%= contact.phone %></td>
              <td><%= contact.email %></td>
              <td><a href="/contact/index/<%= contact._id %>">Edit</a></td>
              <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Delete</a></td>
            </tr>
          <% });  %>
        </table>
      </div>
      <% }  %>

      <div class="col-lg-2"></div>
    </div>
  </div>
<% } else { %>
  <p>You must be logged in to see this content.</p>
  <a href="/login/index">Go to login</a>
<% } %>

<%- include('includes/footer') %>    
